<div class="container">

<div id="studentModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Student</h4>
            </div>
            <form action="" method="POST">
              <div class="modal-body form-signin">
                <div class="btn-block modalFields"></div>  
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
                <input type="submit" value="Speichern" class="btn btn-primary"/>
              </div>
            </form>
        </div>
    </div>
</div>

<table class="table table-striped table-hover table-condensed table-responsive">
  <caption>Studenten</caption>
    <thead>
        <tr>
            <th>Status</th>
            <th>Matrikelnummer</th>
            <th>Vorname</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% _.each(studenten, function(student) { %>
            
          <tr class="userClickable" ident="<%= student.user.id %>">
            <% if(student.user.isonline) { %>
                    <td><img src="/images/icon-online.png"></td>
                <% } else { %>
                    <td><img src="/images/icon-offline.png"></td>
            <% } %>
             <td><%= student.matrikel %></td>
             <td><%= student.vorname %></td>
             <td><%= student.name %></td>
             <td><%= student.email %></td>

            <td><form action="/student/destroy/<%= student.id %>" method="POST">
              <input type="hidden" name="_method" value="delete"/>
              <input type="submit" class="btn btn-sm btn-danger" value="delete"/>
              <!--input type="hidden" name="_csrf" value="<% _csrf %>"-->
            </form></td>
          </tr>

        <% }); %>
        
    </tbody>
</table>
    <a href="#" id="addStudent" class="btn btn-sm btn-success">Studenten hinzufügen</a>





</div>